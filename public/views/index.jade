extends layout

block content
    div.carousel.slide(id="myCarousel")
        ol.carousel-indicators
            li(data-target="#myCarousel", data-slide-to="0", class="active")
            li(data-target="#myCarousel", data-slide-to="1")
            li(data-target="#myCarousel", data-slide-to="2")

        div.carousel-inner
            div.item.active
                div.fill(style="background-image:url('http://placehold.it/1900x1080&text=Slide One');")
                div.carousel-caption
                    h1 Slide One
            div.item
                div.fill(style="background-image:url('http://placehold.it/1900x1080&text=Slide Two');")
                div.carousel-caption
                    h1 Slide Two
            div.item
                div.fill(style="background-image:url('http://placehold.it/1900x1080&text=Slide Three');")
                div.carousel-caption
                    h1 Slide Three

        a.left.carousel-control(href="#myCarousel", data-slide="prev")
            span.icon-prev
        a.right.carousel-control(href="#myCarousel", data-slide="next")
            span.icon-next

    div.section
        div.container
            div.row
                div.col-lg-4.col-md-4
                    h3
                        i.fa.fa-check-circle
                        &nbsp; This is awesome
                    p A complete website design featuring various single page templates from Start Bootstraps library of free HTML starter templates.
                div.col-lg-4.col-md-4
                    h3
                        i.fa.fa-pencil
                        &nbsp; More awesomeness
                    p A complete website design featuring various single page templates from Start Bootstraps library of free HTML starter templates.
                div.col-lg-4.col-md-4
                    h3
                        i.fa.fa-folder-open
                        &nbsp; Don't forget
                    p A complete website design featuring various single page templates from Start Bootstraps library of free HTML starter templates.

    div.section-colored.text-center
        div.container
            div.row
                div.col-lg-12
                    h2 Modern Business: A Clean &amp; Simple Full Website Template by Start Bootstrap
                    p A complete website design featuring various single page templates from Start Bootstraps library of free HTML starter templates.
                        hr


